builds:
  - binary: humio
    goos:
      - windows
      - darwin
      - linux
    goarch:
      - amd64

release:
  # Repo in which the release will be created.
  # Default is extracted from the origin remote URL.
  github:
    owner: humio
    name: go-cli


brew:
  # Reporitory to push the tap to.
  github:
    owner: humio
    name: homebrew-humio

  folder: Formula

  # Git author used to commit to the repository.
  # Defaults are shown.
  commit_author:
    name: Humio
    email: info@humio.com

  # Your app's homepage.
  homepage: "https://humio.com/"

  # Your app's description.
  # Default is empty.
  description: "Manage and Stream Logs to Humio"


archive:
  format: tar.gz
  replacements:
    amd64: 64-bit
    darwin: macOS
    linux: Linux
  files:
    - LICENSE.md
    - CHANGELOG.md
  format_overrides:
    - goos: windows
      format: zip
