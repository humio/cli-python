builds:
  - binary: humio
    goos:
      - windows
      - darwin
      - linux
    goarch:
      - amd64

release:
  # Repo in which the release will be created.
  # Default is extracted from the origin remote URL.
  github:
    owner: humio
    name: cli

  # If set to true, will mark the release as not ready for production.
  # Default is false.
  prerelease: true

archive:
  format: tar.gz
  replacements:
    amd64: 64-bit
    darwin: macOS
    linux: Linux
  files:
    - LICENSE.md
    - CHANGELOG.md

brew:
  # Reporitory to push the tap to.
  github:
    owner: humio
    name: homebrew-humio

  # Git author used to commit to the repository.
  # Defaults are shown.
  commit_author:
    name: Humio
    email: info@humio.com

  # Your app's homepage.
  homepage: "https://humio.com/"

  # Your app's description.
  # Default is empty.
  description: "Manage and Stream Logs to Humio"
